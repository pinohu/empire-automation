# Empire Automation Environment Configuration
# Copy this file to .env and fill in your actual values

# ==================== PLAN CONFIGURATION ====================
# 90-Day Plan start date (YYYY-MM-DD format)
PLAN_START_DATE=2024-01-01

# ==================== DATABASE ====================
# Database connection string
# SQLite (default):
DATABASE_URL=sqlite:///./empire.db
# PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/empire

# ==================== REDIS (for Celery) ====================
REDIS_URL=redis://localhost:6379/0

# ==================== GOOGLE WORKSPACE ====================
# Path to Google service account credentials JSON file
GOOGLE_CREDENTIALS_FILE=credentials/google-service-account.json
# Google Sheets spreadsheet ID
GOOGLE_SHEETS_ID=your-spreadsheet-id-here

# ==================== AGENTICFLOW ====================
# AgenticFlow API key
AGENTICFLOW_API_KEY=your-agenticflow-api-key
# Agent IDs (set after creating agents in AgenticFlow platform)
AGENTICFLOW_MASTER_ORCHESTRATOR_ID=your-master-orchestrator-id
AGENTICFLOW_PROFESSIONAL_SERVICES_ID=your-professional-services-id
AGENTICFLOW_MARKETING_LEAD_GEN_ID=your-marketing-lead-gen-id
AGENTICFLOW_FINANCIAL_OPERATIONS_ID=your-financial-operations-id
AGENTICFLOW_DIRECTORY_MANAGER_ID=your-directory-manager-id
AGENTICFLOW_ENTITY_COMPLIANCE_ID=your-entity-compliance-id
AGENTICFLOW_CLIENT_SUCCESS_ID=your-client-success-id

# ==================== SUITEDASH ====================
SUITEDASH_API_KEY=your-suitedash-api-key
SUITEDASH_API_AUTH_CREDENTIAL=your-suitedash-auth-credential
SUITEDASH_BASE_URL=https://api.suitedash.com

# ==================== EMAILIT ====================
EMAILIT_API_KEY=your-emailit-api-key
EMAILIT_BASE_URL=https://api.emailit.com

# ==================== BRILLIANT DIRECTORIES ====================
BRILLIANT_DIRECTORIES_API_KEY=your-brilliant-directories-api-key
BRILLIANT_DIRECTORIES_BASE_URL=https://api.brilliantdirectories.com/v2

# ==================== FORMALOO ====================
FORMALOO_API_KEY=your-formaloo-api-key
FORMALOO_API_SECRET=your-formaloo-api-secret
FORMALOO_BASE_URL=https://api.formaloo.com

# ==================== ANTHROPIC (Claude) ====================
ANTHROPIC_API_KEY=your-anthropic-api-key

# ==================== N8N (Workflow Automation) ====================
N8N_BASE_URL=http://localhost:5678
N8N_WEBHOOK_PATH=/webhook

# ==================== KONNECTZIT (Workflow Automation) ====================
KONNECTZIT_WEBHOOK_SECRET=your-konnectzit-webhook-secret

# ==================== NOTIFICATIONS ====================
# Notification channel: "email", "slack", or "log"
NOTIFICATION_CHANNEL=log
# Owner email for email notifications
OWNER_EMAIL=your-email@example.com
# Slack webhook URL for Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ==================== API CONFIGURATION ====================
# Environment: "development" or "production"
ENVIRONMENT=development
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000,http://127.0.0.1:8501

# ==================== LOGGING ====================
# Log level: "DEBUG", "INFO", "WARNING", "ERROR"
LOG_LEVEL=INFO

